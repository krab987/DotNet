<DataGrid x:Class="Lab_2.Components.MyDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_2.Components"
             xmlns:model="clr-namespace:Lab_2.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

        <DataGrid x:Name="MainDataGrid" AutoGeneratingColumn="GridShow_OnAutoGeneratingColumn" Loaded="MainDataGrid_OnLoaded" ColumnHeaderStyle="{Binding Mode=OneWay, Source={StaticResource HeaderStyle}}" AutoGenerateColumns="True" Background="{x:Null}" BorderBrush="{x:Null}">
        </DataGrid>

</DataGrid>
