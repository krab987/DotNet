<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_2.Components"
             xmlns:Model="clr-namespace:Lab_2.Model" x:Class="Lab_2.Components.tv_channel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <DataGrid ItemsSource="{Binding}"  x:Name="gridChannel" Loaded="gridChannel_Loaded" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ShowID" Binding="{Binding IdChannel}" IsReadOnly="True"/>
                <DataGridTextColumn Width="*" Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
                <DataGridTextColumn Width="*" Header="TypeShow" Binding="{Binding ChannelType}" IsReadOnly="True"/>
                <DataGridTextColumn Width="*" Header="Duration" Binding="{Binding Frequency}" IsReadOnly="True"/>
            </DataGrid.Columns>
            <DataGrid.DataContext>
                <Model:TableChannel/>
            </DataGrid.DataContext>
        </DataGrid>
    </Grid>
</UserControl>
